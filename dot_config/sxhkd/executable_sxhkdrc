#
# wm independent hotkeys
#

# terminal emulator
super + Return
	flatpak run org.wezfurlong.wezterm

# program launcher
super + @space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + r
    bspc wm -r

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + z
	bspc desktop -l next

alt + c
    ~/.config/bspwm/toggle-scatchpad.sh gnome-calculator gnome-calculator

# send the newest marked node to the newest preselected node
super + y
	bspc node -n newest.!automatic.local
# super + y
# 	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

super + p
    bspc node -g sticky

#
# state/flags
#

# set the window state
super + t
    bspc node -t \~floating

# set the node flags
# super + M ; {m,x,y,z}
# 	bspc node -g {marked,locked,sticky,private}
super + M ; 
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction but only with the same state
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}.$(bspc query -T -n | jq -r '.client.state')

# toggle focus to other layer (tiled <-> floating)
super + q
    ~/.config/bspwm/layerswap.sh

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# parent split ratios
super + alt + {1-8}
    bspc node -f @parent; \
    bspc node -r 0.{12,25,33,4,5,66,75,87}; \
    bspc node older -f;

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# ratio snapping (current just 4:3 and 16:9)
# TODO change hotkeys or use a cycle or something
super + f ; {Prior,Next}
    {~/.config/bspwm/floatingaspect.sh 4 3,~/.config/bspwm/floatingaspect.sh 16 9}

super + f ; {Up ; Left,Left ; Up,Up ; Right,Right ; Up,Down ; Left,Left ; Down,Down ; Right,Right ; Down}
    ~/.config/bspwm/floatingsnap.sh {1,1,2,2,3,3,4,4}

# hide floating windows
super + f ; {h,shift + h}
    bspc node any.floating.local -g hidden{_,=off}

super + f ; {-,=}
    sign={_,+}; \
    bspc node .floating.local -g hidden{_,=off}


# expand a window by moving one of its side outward 
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

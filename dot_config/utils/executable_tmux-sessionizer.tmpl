#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find {{ .projectDirs | join " " }} -mindepth 1 -maxdepth 1 -type d | fzf --ansi --height 100% --keep-right --border-label "sessionizer" --info hidden --no-scrollbar --tabstop 4 --preview 'bat -f --style=grid {}/README.md' --preview-window up,60% )
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
